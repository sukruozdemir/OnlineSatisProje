@model OnlineSatisProje.Core.Entities.Urun

@{
    ViewBag.Title = "Detay";
}
<style>
    p { font-size: 22px; }
</style>

<hr/>
<div class="row">
    <div class="col-4">
        <img style="width: 100%" class="rounded" height="286" src="data:image;base64, @Convert.ToBase64String(Model.UrunResimMapping.FirstOrDefault().Resim.ResimBinary)" alt=""/>
    </div>
    <div class="col-8">
        <div class="row">
            <div class="col-lg-8 col-md-12 col-sm-12">
                <h1 class="display-4 text-capitalize">
                    @Model.Baslik
                </h1>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12">
                <h1 class="display-4 text-lg-right">@Model.Fiyat.ToString("C")</h1>
            </div>
        </div>
        <hr/>
        <p>
            <strong>Satıcı</strong> <a class="text-muted" href="#">@Model.Satici.Ad</a>
        </p>
        <p>
            <strong>Açıklama</strong> @Model.KisaAciklama
        </p>
        @if (Model.KargoAktif)
        {
            <p>
                <strong>Kargo</strong> Mevcut
            </p>
            <p>
                <strong>Ücretsiz Kargo</strong>
                @if (Model.UcretsizKargo)
                {
                    <i class="fa fa-check"></i>
                }
                else
                {
                    <i class="fa fa-times"></i>
                }
            </p>
        }
        else
        {
            <p>
                <strong>Kargo</strong> Mevcut değil
            </p>
        }
    </div>
</div>