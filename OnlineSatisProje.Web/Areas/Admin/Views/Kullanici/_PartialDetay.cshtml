@model OnlineSatisProje.Web.Areas.Admin.Models.KullaniciViewModel

<!-- Modal -->

<div class="modal-header">
    <h5 class="modal-title" id="detayModalLabel">Kullanıcı Detay</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 font-weight-bold text-right">Id</div>
            <div class="col-md-8">@Model.Kullanici.Id</div>
        </div>
        <div class="row">
            <div class="col-md-4 font-weight-bold text-right">Kullanıcı Adı</div>
            <div class="col-md-8">@Model.Kullanici.UserName</div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-md-4 font-weight-bold text-right">Email</div>
            <div class="col-md-8">@Model.Kullanici.Email</div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-md-4 font-weight-bold text-right">Email Onaylandı</div>
            <div class="col-md-8">
                @if (Model.Kullanici.EmailConfirmed)
                {
                    <i class="fa fa-check"></i>
                }
                else
                {
                    <i class="fa fa-times"></i>
                }
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-md-4 font-weight-bold text-right">Telefon Numarası</div>
            <div class="col-md-8">@(string.IsNullOrEmpty(Model.Kullanici.PhoneNumber) ? Html.Encode("---") : Html.Encode(Model.Kullanici.PhoneNumber))</div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-md-4 font-weight-bold text-right">Telefon Numarası Onaylandı</div>
            <div class="col-md-8">
                @if (Model.Kullanici.PhoneNumberConfirmed)
                {
                    <i class="fa fa-check"></i>
                }
                else
                {
                    <i class="fa fa-times"></i>
                }
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-md-4 font-weight-bold text-right">Hatalı Erişim Sayısı</div>
            <div class="col-md-8">@Model.Kullanici.AccessFailedCount</div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-md-4 font-weight-bold text-right">Kullanıcı Aktif</div>
            <div class="col-md-8">
                @if (Model.Kullanici.IsActive)
                {
                    <i class="fa fa-check"></i>
                }
                else
                {
                    <i class="fa fa-times"></i>
                }
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-md-4 font-weight-bold text-right">Kullanıcı Silindi</div>
            <div class="col-md-8">
                @if (Model.Kullanici.IsDeleted)
                {
                    <i class="fa fa-check"></i>
                }
                else
                {
                    <i class="fa fa-times"></i>
                }
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-md-4 font-weight-bold text-right">Oluşturulma Tarihi</div>
            <div class="col-md-8">@Model.Kullanici.CreatedDate.ToLongDateString() @Model.Kullanici.CreatedDate.ToLongTimeString()</div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-md-4 font-weight-bold text-right">Güncellenme Tarihi</div>
            <div class="col-md-8">@Model.Kullanici.UpdatedDate.ToLongDateString() @Model.Kullanici.UpdatedDate.ToLongTimeString()</div>
        </div>
        <hr/>
        @if (Model.Roles.Count > 0)
        {
            <div class="row">
                <div class="col-md-4 font-weight-bold text-right">Kullanıcı Rolleri</div>
                <div class="col-md-8">
                    <div class="row">
                        <ol class="breadcrumb">
                            @foreach (var item in Model.Roles)
                            {
                                <li class="breadcrumb-item">@item</li>
                            }
                        </ol>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
</div>