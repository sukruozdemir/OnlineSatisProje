@model OnlineSatisProje.Core.Entities.Ilce
<div class="modal fade" id="modalilceekle" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">İlçe ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("Ekle", "Ilce", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", placeholder = "Ad" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control", placeholder = "Posta kodu" })
                    </div>
                    <div class="form-group">
                        @Html.DropDownListFor(x => x.SehirId, (SelectList)ViewData["Sehirler"], new { @class = "custom-select col-12" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-danger">Kaydet</button>
                </div>
            }
        </div>
    </div>
</div>
