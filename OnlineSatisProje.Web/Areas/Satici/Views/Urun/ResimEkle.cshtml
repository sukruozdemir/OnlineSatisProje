@{
    ViewBag.Title = "ResimEkle";
}


@using (Html.BeginForm("ResimEkle", "Urun", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()


    <input type="hidden" value="@ViewBag.ResimEkleUrunId" name="resimekleurunid" />
    <div class="form-group row">
        <div class="col-10">
            <input type="file" id="ResimId" name="upload" />
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Ekle</button>
        </div>
    </div>
}