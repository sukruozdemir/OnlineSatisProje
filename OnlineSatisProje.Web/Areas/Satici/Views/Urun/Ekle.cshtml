@model OnlineSatisProje.Web.Areas.Satici.Models.UrunModel

@{
    ViewBag.Title = "Ürün Ekle";
}

@using (Html.BeginForm("Ekle", "Urun", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <div class="form-group row">
        @Html.LabelFor(x => x.Baslik, new {@class = "col-2 col-form-label text-right"})
        <div class="col-10">
            @Html.TextBoxFor(x => x.Baslik, new {@class = "form-control"})
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.KisaAciklama, new {@class = "col-2 col-form-label text-right"})
        <div class="col-10">
            @Html.TextAreaFor(x => x.KisaAciklama, new {@class = "form-control", rows = 3})
        </div>
    </div>

    <div class="form-group row">
        <div class="col-10 offset-2">
            <label class="custom-control custom-checkbox">
                @Html.CheckBoxFor(x => x.Yayinlandi, new {@class = "custom-control-input"})
                <span class="custom-control-indicator"></span>
                <span class="custom-control-description">@Html.DisplayNameFor(x => x.Yayinlandi)</span>
            </label>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-10 offset-2">
            <label class="custom-control custom-checkbox">
                @Html.CheckBoxFor(x => x.AnasayfadaGoster, new {@class = "custom-control-input"})
                <span class="custom-control-indicator"></span>
                <span class="custom-control-description">@Html.DisplayNameFor(x => x.AnasayfadaGoster)</span>
            </label>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-10 offset-2">
            <label class="custom-control custom-checkbox">
                @Html.CheckBoxFor(x => x.KargoAktif, new {@class = "custom-control-input"})
                <span class="custom-control-indicator"></span>
                <span class="custom-control-description">@Html.DisplayNameFor(x => x.KargoAktif)</span>
            </label>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-10 offset-2">
            <label class="custom-control custom-checkbox">
                @Html.CheckBoxFor(x => x.UcretsizKargo, new {@class = "custom-control-input"})
                <span class="custom-control-indicator"></span>
                <span class="custom-control-description">@Html.DisplayNameFor(x => x.UcretsizKargo)</span>
            </label>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-10 offset-2">
            <label class="custom-control custom-checkbox">
                @Html.CheckBoxFor(x => x.YorumIzinVer, new {@class = "custom-control-input"})
                <span class="custom-control-indicator"></span>
                <span class="custom-control-description">@Html.DisplayNameFor(x => x.YorumIzinVer)</span>
            </label>
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.Fiyat, new {@class = "col-2 col-form-label text-right"})
        <div class="col-10">
            @Html.TextBoxFor(x => x.Fiyat, new {@class = "form-control"})
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.UzunAciklama, new {@class = "col-2 col-form-label text-right"})
        <div class="col-10">
            @Html.TextBoxFor(x => x.UzunAciklama, new {@class = "form-control"})
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </div>
}